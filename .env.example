# ============================================
# PayNXT Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# For production, set these in Vercel (frontends) and Railway (backend services)

# ============================================
# Shared (Railway API + Sweeper)
# ============================================
DATABASE_URL=postgres://user:password@neon-host/dbname
# SHADOW_DATABASE_URL=postgres://user:password@neon-host/shadow-db  # optional, if using migrations

# ============================================
# API Service (apps/api) - Railway
# ============================================
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3002
# For production, set CORS_ORIGINS to your Vercel URLs:
# CORS_ORIGINS=https://your-consumer-app.vercel.app,https://your-merchant-app.vercel.app

JWT_SECRET=changeme-super-secret-key-min-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# Sweeper Service (apps/sweeper) - Railway
# ============================================
POLL_INTERVAL_MS=5000
BATCH_SIZE=10

# ============================================
# Frontend Apps (apps/consumer-app + apps/merchant-app) - Vercel
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
# For production, set to your Railway API URL:
# NEXT_PUBLIC_API_URL=https://your-api-service.up.railway.app
